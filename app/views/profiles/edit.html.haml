.container
  %h2 Profile Edit
  %ul
    - @profile.errors.full_messages.each do |message|
      %li= message
  = form_with(model: @profile, url: profile_path, method: "put", local: true) do |f|
    .field_spacious
      = f.label :avatar, "Avatar"
      %br/
      = f.file_field :avatar
    .field
      = f.label :nickname, "Name"
      %br/
      = f.text_field :nickname, class: "text"
    .field
      = f.label :introduction, "Introduction"
      %br/
      = f.text_area :introduction
    .field_spacious
      = f.label :gender, "Gender"
      %br/
      = f.select :gender, Profile.genders.map { |k, v| [ I18n.t("enum.genders.#{k}"), k ]}, {}, { class: 'text' }
    .field
      = f.label :birthday, "Birthday"
      %br/
      = f.date_field :birthday, class: 'text'
    .field
      = f.label :subscribed, "Get notifications"
      = f.check_box :subscribed

    = f.submit 'Save', class: 'btn-primary'
