= link_to board_task_path(task.board, task) do
  .card
    - if task.eyecatch.attached?
      .card_image
        = image_tag task.eyecatch
    .card_content
      .card_title_row
        .card_title
          = task.title
      .card_description
        = task.content
      .card_deadline
        = "期限：#{l(task.deadline, format: :long)}"
      .card_bottom
        .card_avatar
          = image_tag task.user.avatar_image
        - task.commenting_users.each do |commenter|
          .card_avatar.comment-avatar
            = image_tag commenter.avatar_image

        .card_comment_count
          = "#{task.comments_count}"
          = image_tag 'comment_icon.svg'
